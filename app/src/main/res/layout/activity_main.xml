<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculatorapp.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/button14"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintLeft_toRightOf="@+id/button6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintLeft_toRightOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:background="#52e572"
        android:onClick="onClickOperator"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:background="#75ea5b"
        android:onClick="clear"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button10" />

    <Button
        android:id="@+id/button16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#75ea5b"
        android:onClick="calculate"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button15" />

    <Button
        android:id="@+id/button17"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:background="#52e572"
        android:onClick="onClickOperator"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button16"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintLeft_toRightOf="@+id/button14" />

    <Button
        android:id="@+id/button12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintLeft_toRightOf="@+id/button11" />

    <Button
        android:id="@+id/button13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:background="#52e572"
        android:onClick="onClickOperator"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/button12"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="right"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintLeft_toRightOf="@+id/button3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#52e572"
        android:onClick="onClickOperator"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button4" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:background="#a6a6ad"
        android:onClick="onClickNum"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
